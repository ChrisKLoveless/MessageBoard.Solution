@{
  ViewData["Title"] = $"Edit {Model.Name}";
}

@model MessageBoard.Models.Users
<h4>Edit User!</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.UsersId)
  @Html.TextBoxFor(model => model.Name, new { @Value = Model.Name, style = "text-align: center;"})
  <br>
  <br><input type="submit" value="Edit" class="btn btn-primary"/>
}

<br>
<p>@Html.ActionLink("Back to details", "Details", new {id = @Model.UsersId})</p>